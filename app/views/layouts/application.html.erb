<head>
  <title>Флэшкарточкер</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
</head>
<%= javascript_include_tag 'application' %>

    <% if current_user %>


    <ul class="navigation-links">
        <li><%= link_to 'Главная', root_path %></li>
        <li><%= link_to 'Все карточки', cards_path %></li>
        <li><%= link_to 'Добавить карточку', new_card_path %></li>
        <li><%= link_to 'Все колоды', decks_path %></li>
        <li><%= link_to 'Добавить колоду', new_deck_path %></li>
        <li> <%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
        <li><%= link_to "Logout", :logout, method: :post %></li>
    <% else %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Login", :login %>
    <% end %>
</ul>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>

<%= yield %>