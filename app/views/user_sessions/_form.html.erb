<%= form_tag user_sessions_path, :method => :post do %>

  <div class="field">
    <%= label_tag t("user.email") %><br />
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag t("user.password") %><br />
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= check_box_tag :remember, params[:remember], true %>
    <%= label_tag t("user.remember") %>
  </div>

  <div class="actions">
    <%= submit_tag t("user.login") %>
  </div>

<% end %>