<h1>Editing card</h1>

<%= form_for @card do |f| %>
    <p>
      <%= f.label :original %><br>
      <%= f.text_field :original_text %>
    </p>

    <p>
      <%= f.label :translate %><br>
      <%= f.text_field :translated_text %>
    </p>

    <p>
      <%= f.file_field :avatar %>
    </p>

    <p>
      <%= f.label :review %><br>
      <%= f.date_field :review_date, value: @card.review_date %>
    </p>

    <div class="actions">
      <%= f.submit "OK", class: 'btn btn-primary' %>
          </div>

      <% end %>
          <%= link_to 'Back', cards_path %>